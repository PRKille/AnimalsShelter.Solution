@{
  Layout = "_Layout";
}
@using System.Linq;
@using System.Collections.Generic;
@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;

<h1>Animals</h1>

<div class="box">
  @if (@Model.Count == 0)
  {
    <h3>All the animals have homes!</h3>
  }
  <ul>
  @foreach (Animal animal in Model.OrderBy(animal => animal.Name))
  {
    <li>@Html.ActionLink($"{animal.Name}", "Details", new {id = animal.AnimalId })</li>
  }
  </ul>
  <p>@Html.ActionLink("Add an animal", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>