@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h4>Surrender a new animal to the shelter</h4>

<div class="box">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Type)
    @Html.TextBoxFor(model => model.Type)<br>
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>
    @Html.LabelFor(model => model.Gender)
    @Html.TextBoxFor(model => model.Gender)<br>
    @Html.LabelFor(model => model.DateOfAdmittance)
    @Html.EditorFor(model => model.DateOfAdmittance, new { @type = "date"})<br>
    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)<br>
    @Html.LabelFor(model => model.Age)
    @Html.TextBoxFor(model => model.Age)<br>
    @* @Html.LabelFor(model => model.PlaysWellWithOthers)
    @Html.CheckBoxFor(model => model.PlaysWellWithOthers) *@
    
    <input class="btn" type="submit" value="Add this animal" />
  }
  <p>@Html.ActionLink("Back to Animal List", "Index")</p>
</div>

